@model IEnumerable<CourseShuffle.Data.Objects.Entities.Faculty>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add", "Create",null,new {@class = "btn btn-success"})
</p>
<table class="table">
