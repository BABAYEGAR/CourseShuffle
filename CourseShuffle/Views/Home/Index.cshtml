@using CourseShuffle.Data.Factory.FactoryData
@using CourseShuffle.Data.Objects.Entities
@using CourseShuffle.Data.Service.Enum
@{
    ViewBag.Title = "Home Page";
}
@{
    var loggedinuser = Session["courseshuffleloggedinuser"] as AppUser;
}
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var faculties = new FacultyFactory().GetAllFaculties().ToList();
    var levels = new LevelFactory().GetAllLevels().ToList();
}
<style>
    .navbar-login {
        width: 305px;
        padding: 10px;
        padding-bottom: 0px;
    }

    .navbar-login-session {
        padding: 10px;
        padding-bottom: 0px;
        padding-top: 0px;
    }
    .icon-size {
        font-size: 87px;
    }
</style>
<div class="ted">
    <div class="" style="font-family: Verdana; font-size: 13px">

        <ul class="main-navigation">

            <li style="margin-left: 80px;">
                <a href="#">Home</a>
            </li>
            <li>
                <a href="#">Faculty</a>
                <ul>
                    @foreach (var item in faculties)
                    {
                        var departments = new DepartmentFactory().GetAllDepartmentsForAFaculty(item.FacultyId);
                        <li class="slim">
                            <a href="#">@item.Name</a>
                            <ul>
                                @foreach (var department in departments)
                                {
                                    <li class="slim">
                                        <a href="#">@department.Name</a>
                                        <ul>
                                            @foreach (var level in levels)
                                            {
                                                <li class="slim"><a href="@Url.Action("ViewCoursesForLevel","Courses",new {levelId = level.LevelId,departmentId = department.DepartmentId})">@level.Name</a></li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </li>
                    }

                </ul>
            </li>

            <li>
                <a href="#">About Us</a>
            </li>
                @if (loggedinuser != null)
                {

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span>
                            <strong>@loggedinuser.Firstname</strong>
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-login">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <p class="text-center">
                                                <span class="glyphicon glyphicon-user icon-size"></span>
                                            </p>
                                        </div>
                                        <div class="col-lg-8">
                                            <p class="text-left">
                                                <strong>Salman Khan</strong>
                                            </p>
                                            <p class="text-left small">@loggedinuser.Email</p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-primary btn-block btn-sm">Profile</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="divider navbar-login-session-bg"></li>
                            <li><a href="#">Change Password <span class="glyphicon glyphicon-cog pull-right"></span></a></li>
                            <li class="divider"></li>
                            @if (loggedinuser.Role == UserType.Administrator.ToString())
                            {
                                <li><a href="@Url.Action("Index","AppUsers")">Dashboard <span class="glyphicon glyphicon-stats pull-right"></span></a></li>
                            }
                            @if (loggedinuser.Role == UserType.Facilitator.ToString())
                            {
                                <li><a href="@Url.Action("Index","Faculties")">Dashboard <span class="glyphicon glyphicon-stats pull-right"></span></a></li>
                            }
                            @if (loggedinuser.Role == UserType.Lecturer.ToString())
                            {
                                <li><a href="@Url.Action("Index","Departments")">Dashboard <span class="glyphicon glyphicon-stats pull-right"></span></a></li>
                            }
                         
                            <li class="divider"></li>
                            <li><a href="@Url.Action("LogOut","Account")">Sign Out <span class="glyphicon glyphicon-log-out pull-right"></span></a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Login","Account")">
                            <span class="glyphicon glyphicon-log-in"></span>
                            <strong>Login</strong>
                        </a>
                    </li>
                }

            </ul>



        <!--carousel-->
        <div id="carousel-example-generic" style="z-index: -1;" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="../../AppTheme/img/book.jpg" alt="...">
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="../../AppTheme/img/bg.png" alt="...">
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="../../AppTheme/img/fig.png" alt="...">
                    <div class="carousel-caption">

                    </div>
                </div>

            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


    </div>
