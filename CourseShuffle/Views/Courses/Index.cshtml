@using CourseShuffle.Data.Objects.Entities
@using CourseShuffle.Data.Service.Enum
@model IEnumerable<CourseShuffle.Data.Objects.Entities.Courses>

@{
    ViewBag.Title = "Index";
    var loggedinuser = Session["courseshuffleloggedinuser"] as AppUser;
    var hundredLevel = Model.Where(n => n.LevelId == 2);
    var twoHundredLevel = Model.Where(n => n.LevelId == 3);
    var threeHundredLevel = Model.Where(n => n.LevelId == 4);
    var fourHundredLevel = Model.Where(n => n.LevelId == 5);
}
@section css{
    <link href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet"/>
}
